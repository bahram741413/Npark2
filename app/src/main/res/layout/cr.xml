<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@layout/header_gradient"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">
        <!-- Logo Start-->
        <TextView
            android:text="@string/tsklbl1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#f6ffff"
            android:gravity="center_vertical|center|center_horizontal" />         <!-- Logo Ends -->
    </LinearLayout>



    <ScrollView
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="1dip"
        android:scrollbarStyle="insideInset"
        android:fillViewport="true"
        >
        <!--
                <HorizontalScrollView
                    android:layout_height="fill_content"
                    android:layout_width="wrap_content"

                    android:id="@+id/horizontalView"
                    android:scrollbars="vertical"
                    android:layout_marginTop="1dip">
        -->

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            tools:ignore="MergeRootFrame"
            style="@style/AppTheme"
            android:textAlignment="center"
            android:gravity="center_vertical|center|center_horizontal"
            android:clickable="false"
            >
            <TableRow android:baselineAligned="false"
                android:gravity="center"
                android:background="@drawable/labelfrmt">

                <TextView
                    android:background="@drawable/rounded_corner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/crdtxt"
                    android:maxLength="20"
                    android:layout_span="1"
                    android:gravity="right"
                    android:textSize="30dp" />
                <Button
                    android:background="#ff66116b"
                    android:textColor="#f6ffff"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="دریافت کد کارت"
                    android:id="@+id/ldbtn"
                    android:onClick="ldcr"
                    android:textSize="35sp" />


            </TableRow>




            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/labelfrmt"
                    android:padding="2dip" />
            </TableRow>




            <TableRow
                android:gravity="right"
                android:background="@drawable/labelfrmt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/rounded_corner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/crdidtxt"
                    android:maxLength="10"
                    android:editable="true"
                    android:inputType="number"
                    android:layout_span="2"
                    android:gravity="right"
                    android:textSize="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/lbl9"
                    android:gravity="right"
                    android:textSize="30dp" />

            </TableRow>





            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/labelfrmt"
                    android:padding="2dip" />
            </TableRow>
            <TableRow
                android:gravity="right"
                android:background="@drawable/labelfrmt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/rounded_corner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nametxt"
                    android:maxLength="20"
                    android:editable="true"
                    android:inputType="text"
                    android:layout_span="2"
                    android:gravity="right"
                    android:textSize="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/lbl6"
                    android:gravity="right"
                    android:textSize="30dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/labelfrmt"
                    android:padding="2dip" />
            </TableRow>



            <TableRow
                android:gravity="right"
                android:background="@drawable/labelfrmt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/rounded_corner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/familytxt"
                    android:maxLength="30"
                    android:editable="true"
                    android:layout_span="2"
                    android:inputType="text"
                    android:gravity="center"
                    android:textSize="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/lbl7"
                    android:gravity="right"
                    android:textSize="30dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/labelfrmt"
                    android:padding="2dip" />
            </TableRow>



            <TableRow
                android:gravity="right"
                android:background="@drawable/labelfrmt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/rounded_corner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobiletxt"
                    android:maxLength="11"
                    android:editable="true"
                    android:layout_span="2"
                    android:inputType="number"
                    android:gravity="right"
                    android:textSize="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/lbl8"
                    android:gravity="right"
                    android:textSize="30dp" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/labelfrmt"
                    android:padding="2dip" />
            </TableRow>






        <TableRow
            android:gravity="center"
            android:background="@drawable/labelfrmt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <EditText
                android:background="@drawable/rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e1txt"
                android:hint="@string/lbl1"
                android:maxLength="2"
                android:editable="true"
                android:inputType="number"
                android:gravity="center"
                android:textSize="50sp"
                android:nextFocusLeft="@+id/e2txt"/>


            <EditText
                android:background="@drawable/rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e2txt"
                android:hint="@string/lbl2"
                android:maxLength="1"
                android:editable="true"
                android:inputType="text"
                android:gravity="center"
                android:nextFocusLeft="@+id/e3txt"
                android:textSize="50sp" />
            <EditText
                android:background="@drawable/rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e3txt"
                android:hint="@string/lbl3"
                android:maxLength="3"
                android:editable="true"
                android:inputType="number"
                android:gravity="center"
                android:textSize="50dp" />



        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/labelfrmt"
                    android:padding="2dip" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:background="@drawable/labelfrmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/rounded_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/e4txt"
                    android:hint="@string/lbl5"
                    android:maxLength="2"
                    android:editable="true"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="50dp"
                    android:nextFocusForward="@+id/e1txt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/lbl4"
                    android:gravity="center"
                    android:textSize="50dp" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="10"
                    android:background="@drawable/labelfrmt"
                    android:padding="2dip" />
            </TableRow>



            <TableRow android:baselineAligned="false"
                android:gravity="center"
                android:background="@drawable/labelfrmt">
                <Button
                    android:background="#ff66116b"
                    android:textColor="#f6ffff"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="ثبت"
                    android:id="@+id/savebtn"
                    android:onClick="savechanges"
                    android:textSize="35sp" />
            </TableRow>


        </TableLayout>
        <!--
 </HorizontalScrollView>
 -->
    </ScrollView>

</LinearLayout>